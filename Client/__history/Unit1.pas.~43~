procedure TForm1.applyLayout;
var
i,j,k:Integer;
VlwPaiObj: TButton;
begin
for k := 0 to 76 do
begin
  if sizeX[k]<>1 then
  begin
  VlwPaiObj:=TButton(Form1.FindComponent(form1.getId(k)));
  VlwPaiObj.Width:=60*(sizeX[k]+1);
  for i := 1 to sizeX[k]-1 do
  begin
   VlwPaiObj:=TButton(Form1.FindComponent(form1.getId(k+i*11)));
   VlwPaiObj.Enabled:=false;
   VlwPaiObj.Visible:=false;
    if sizeY[k]<>1 then
    for j := 1 to sizeY[k]-1 do
    begin
     VlwPaiObj:=TButton(Form1.FindComponent(form1.getId(k+i*11+j)));
     VlwPaiObj.Enabled:=false;
     VlwPaiObj.Visible:=false;
    end;
   end;
   if sizeY[k]<>1 then
   VlwPaiObj:=TButton(Form1.FindComponent(form1.getId(k)));
    VlwPaiObj.Height:=60*sizeY[k];
    for j := 1 to sizeY[k]-1 do  //DESNECESSARIO
     begin
     VlwPaiObj:=TButton(Form1.FindComponent(form1.getId(k+j)));
     VlwPaiObj.Enabled:=false;
     VlwPaiObj.Visible:=false;
     end;
  end;
end;
end;

